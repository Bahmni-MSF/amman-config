{
        "id": "bahmni.registration",
        "instanceOf":"bahmni.template.registration",
        "description": "Bahmni Patient Registration App",
        "extensionPoints": [
            {
                "id": "org.bahmni.registration.patient.search.result.action",
                "description": "Bahmni Patient Search Result Action"
            },
            {
                "id": "org.bahmni.registration.patient.next",
                "description": "After Bahmni Patient Registration, forward url configuration"
            }
        ],
        "contextModel": [
            "patientUuid",
            "activeVisitUuid"
        ],
        "config" : {
            "mandatoryPersonAttributes" : [
                "id1Document",
                "id1FullNameEnglish",
                "id1DocNumber",
                "spokenLanguages",
                "phoneNumber1"
                ],
            "patientInformation": {
                "patientContact": {
                    "title": "Patient Contact",
                    "translationKey": "Patient Contact",
                    "attributes": [
                        "phoneNumber1",
                        "phoneNumber2",
                        "emailAddress",
                        "whatsapp",
                        "facebook",
                        "viber"
                    ]
                },
                "campaddress": {
                    "title": "Camp Address",
                    "translationKey": "Camp Address",
                    "attributes": [
                        "campCountry",
                        "campGovernorate",
                        "nameoftheCamp",
                        "campVillage",
                        "campDistrict",
                        "nameoftheBlock",
                        "nameoftheArea",
                        ""
                    ]
                },
                "otherInformation": {
                    "title": "Other Information",
                    "translationKey": "Other Information",
                    "attributes": [
                        "nationality1",
                        "nationality2",
                        "occupation",
                        "spokenLanguages"
                    ]
                },
                "emergencyContact": {
                    "title": "Emergency Contact Details",
                    "translationKey": "Emergency Contact Details",
                    "attributes": [
                        "emergencyContactName",
                        "emergencyContactNumber",
                        "relationWithPatient"
                    ]
                },
                "idDocumentOne": {
                    "title": "Patient ID Document 1",
                    "translationKey": "Patient ID Document 1",
                    "attributes": [
                        "id1Document",
                        "id1FullNameEnglish",
                        "id1FullNameArabic",
                        "id1DocNumber",
                        "id1DateOfExpiry"
                    ],
                    "expanded": true
                },
                "idDocumentTwo": {
                    "title": "Patient ID Document 2",
                    "translationKey": "Patient ID Document 2",
                    "attributes": [
                        "id2Document",
                        "id2FullNameEnglish",
                        "id2FullNameArabic",
                        "id2DocNumber",
                        "id2DateOfExpiry"
                    ]
                },
                "caretaker": {
                    "title": "Caretaker Details",
                    "translationKey": "Caretaker Details",
                    "attributes": [
                        "caretakerNameEnglish",
                        "caretakerNameArabic",
                        "caretakerGender",
                        "caretakerDob",
                        "caretakerAge",
                        "caretakerNationality"
                    ]
                },
                "Caretaker ID documents": {
                    "title": "Caretaker ID Documents",
                    "translationKey": "Caretaker ID Documents",
                    "attributes": [
                        "id3Document",
                        "id3FullNameEnglish",
                        "id3FullNameArabic",
                        "id3DocNumber",
                        "id3DateOfExpiry"
                    ]
                },
                "Caretaker Contact Details": {
                    "title": "Caretaker Contact Details",
                    "translationKey": "Caretaker Contact Details",
                    "attributes": [
                        "caretakerPhoneNumber1",
                        "caretakerPhoneNumber2",
                        "caretakerEmail",
                        "caretakerWhatsapp",
                        "caretakerViber",
                        "caretakerFacebook"
                    ]
                },
                "LegalRepresentative": {
                    "title": "Legal Representative (for patient under 18 years only) ",
                    "translationKey": "Legal Representative (for patient under 18 years only) ",
                    "attributes": [
                        "legalRepFullNameEnglish",
                        "legalRepFullNameArabic",
                        "legalRepRelationWithPatient",
                        "legalRepalsoCaretaker",
                        "legalRepGender",
                        "legalRepDob",
                        "legalRepAge",
                        "legalRepNationality"
                    ]
                }
            },
            "addressHierarchy": {
                "showAddressFieldsTopDown": false,
                "freeTextAddressFields": ["address2", "address1"]
            },

            "relationshipTypeMap": {
                "Doctor":"provider",
                "Parent":"patient"
            },



            "defaultVisitType": "OPD",
            "searchByIdForwardUrl": "/patient/{{patientUuid}}",
            "showMiddleName": true,
            "showCasteSameAsLastNameCheckbox": false,
            "printOptions": [
                {
                    "translationKey": "REGISTRATION_PRINT_REG_CARD_LOCAL_KEY",
                    "templateUrl": "/bahmni_config/openmrs/apps/registration/registrationCardLayout/print_local.html",
                    "shortcutKey": "l"
                },
                {
                    "translationKey": "REGISTRATION_PRINT_REG_CARD_KEY",
                    "templateUrl": "/bahmni_config/openmrs/apps/registration/registrationCardLayout/print.html",
                    "shortcutKey": "p"
                },
                {
                    "translationKey": "REGISTRATION_PRINT_SUPPLEMENTAL_PAPER",
                    "templateUrl": "/bahmni_config/openmrs/apps/registration/supplementalPaperLayout/print.html",
                    "shortcutKey": "r"
                }
            ],
            "fieldValidation" : {
                "familyName" : {"pattern" : "[a-zA-Z]{0,}", "errorMessage" : "Should contain characters"},
                "givenName" : {"pattern" : "[a-zA-Z]{0,}", "errorMessage" : "Should contain characters"},
                "middleName" : {"pattern" : "[a-zA-Z]{0,}", "errorMessage" : "Should contain characters"}
            },
            "patientSearch": {
                "address": {
                    "label": "Rural Ward",
                    "placeholder": "Enter ward",
                    "field": "address2"
                }
            }
        }
}
